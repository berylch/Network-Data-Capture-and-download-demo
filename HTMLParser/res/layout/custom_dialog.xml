<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/share_dialog_bg"
    android:minWidth="300.0dip"
    android:orientation="vertical" >

    <include
        android:id="@id/title_header"
        layout="@layout/custom_dialog_header" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="15.0dip"
        android:background="#ff38ba41" />

    <LinearLayout
        android:id="@id/wrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@id/content_wraper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10.0dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip"
            android:paddingTop="10.0dip" >

            <LinearLayout
                android:id="@id/content_custom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <LinearLayout
                android:id="@id/custom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/buttonPanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4.0dip"
            android:layout_marginTop="4.0dip"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip" >

            <TextView
                android:id="@id/button1"
                style="@style/btn_dialog_1"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/btn_dialog_pos"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/white" />

            <View
                android:id="@id/btn_seperator3"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/between_button_line"
                android:visibility="gone" />

            <TextView
                android:id="@id/button3"
                style="@style/btn_dialog_1"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/btn_dialog_neg"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/group_header_text_color"
                android:visibility="gone" />

            <View
                android:id="@id/btn_seperator2"
                android:layout_width="1.0dip"
                android:layout_height="fill_parent"
                android:background="@drawable/between_button_line"
                android:visibility="gone" />

            <TextView
                android:id="@id/button2"
                style="@style/btn_dialog_1"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="8.0dip"
                android:layout_weight="1.0"
                android:background="@drawable/btn_dialog_neg"
                android:gravity="center"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="@color/group_header_text_color" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/custom2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="6.0dip"
        android:paddingTop="4.0dip" />

</LinearLayout>