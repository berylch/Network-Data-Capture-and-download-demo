<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/lohanry_andfilemanage_details_items_icon"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_marginRight="2.0dip"
        android:src="@drawable/ic_launcher" >
    </ImageView>

    <TextView
        android:id="@+id/lohanry_andfilemanage_details_items_filename"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/lohanry_andfilemanage_details_items_icon"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="文件名"
        android:textColor="#ffffffff"
        android:textSize="17.0dip" />

    <TextView
        android:id="@+id/lohanry_andfilemanage_details_items_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/lohanry_andfilemanage_details_items_filename"
        android:layout_marginRight="6.0dip"
        android:layout_toRightOf="@+id/lohanry_andfilemanage_details_items_icon"
        android:gravity="center_vertical"
        android:text="时间戳"
        android:textSize="12.0dip" />

    <TextView
        android:id="@+id/lohanry_andfilemanage_details_items_permissions"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/lohanry_andfilemanage_details_items_filename"
        android:layout_marginRight="6.0dip"
        android:layout_toRightOf="@+id/lohanry_andfilemanage_details_items_timestamp"
        android:gravity="center_vertical"
        android:text="权限"
        android:textSize="12.0dip" />

    <TextView
        android:id="@+id/lohanry_andfilemanage_details_items_filesize"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_below="@+id/lohanry_andfilemanage_details_items_filename"
        android:layout_marginRight="6.0dip"
        android:layout_toRightOf="@+id/lohanry_andfilemanage_details_items_permissions"
        android:gravity="center_vertical"
        android:text="大小"
        android:textSize="12.0dip" />

    <ImageView
        android:id="@+id/lohanry_andfilemanage_details_items_ischoose"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2.0dip" />

</RelativeLayout>